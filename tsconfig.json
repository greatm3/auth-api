{ 
  "compilerOptions": { 
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",           
    "target": "es2017",
    "types": ["node"],               
  
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    "strict": true,
    "esModuleInterop": true,          
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true       
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}